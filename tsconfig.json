{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,

        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
