{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },

    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "dist"]
}
